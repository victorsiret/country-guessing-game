
<head>
  <title>World Class Drinker</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link href="css/cover.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Bitter|Montserrat|&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/@coreui/icons/css/free.min.css">
</head>

<body class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">



    <main role="main" class="inner cover">
      <h1 class="cover-heading">World Class Drinker</h1>
      <p class="">The number one source of fine inebriation entertainment for droughty cosmopolites in the need of refreshment.</p>
    </main>


    <form action="/" method="post">

    
    <div class="players row mx-auto">

      {{#if post}}
      {{#pData}}
      <div class="col">
        <div class="card mx-auto">
          <div class="card-header">
            {{this.name}}
          </div>
          <div class="card-body">
            <p class="card-text">Ready, {{this.name}}?</p>
          </div>
        </div>
      </div>
      {{/pData}}
      {{/if}}

      <!-- Player Boxes Loop -->
      {{#unless post}}
      {{#playerBox}}
      <div class="col" id="{{this.id}}" style="{{this.style}}">
        <div class="card mx-auto">
          <div class="card-header">
            {{this.name}}
          </div>
          <div class="card-body">
            <p class="card-text">What's your name {{this.name}}?</p>
            <p><input type="text" name="{{this.formName}}" class="" id="{{this.id2}}" {{this.req}}></p>
          </div>
        </div>
      </div>
      {{/playerBox}}
      {{/unless}}

    <!-- Players Counter -->
    <input type="text" name="players" id="players" style="display:none;">

  </div>

  

    <!-- Buttons -->
    <div class="col">
        <div class="cockpit mx-auto">
          <div class="btn-group-vertical my-auto">
            <!-- Add Players -->
            {{#unless post}}
            <a href="#" class="btn btn-success" onclick="addPlayer()" id="addButton"><span class="cui-library-add"></span> Add player</a>
            {{/unless}}

            <!-- Remove Players -->
            {{#unless post}}
            <a href="#" class="btn btn-danger" onclick="removePlayer()" id="removeButton" style="display:none;"><span class="cui-delete"></span> Remove player</a>
            {{/unless}}

            <!-- Start Game -->
            {{#if post}}
            <a href="/game" class="btn btn-primary"><span class="cui-drink-alcohol"></span> Go somewhere</a>
            {{/if}}

            <!-- Register Players -->
            {{#unless post}}
              <button type="submit" class="btn btn-info"><span class="cui-paperclip"></span> Register Players</button>
            {{/unless}}
          </div>
        </div>
        </div>

    </form>


</body>

<!-- Add Players Script -->
<script src="/js/addPlayers.js"></script>